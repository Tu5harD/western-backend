<body style="font-family: Arial, sans-serif">
  <h2 style="text-align: center"><%= report %></h2>
  <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px">
    <thead>
      <tr>
        <th
          style="
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
            background-color: #f2f2f2;
          "
        >
          Product ID
        </th>
        <th
          style="
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
            background-color: #f2f2f2;
          "
        >
          Product Name
        </th>
        <th
          style="
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
            background-color: #f2f2f2;
          "
        >
          Total Quantity Sell
        </th>
        <th
          style="
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
            background-color: #f2f2f2;
          "
        >
          Retailer Profit/Loss
        </th>
        <th
          style="
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
            background-color: #f2f2f2;
          "
        >
          WholeSaler Profit/Loss
        </th>
      </tr>
    </thead>
    <tbody>
      <% for (let i = 0; i < profitLossReport.length; i++) { %>
      <tr>
        <td style="border: 1px solid #dddddd; text-align: left; padding: 8px">
          <%= profitLossReport[i].product_id %>
        </td>
        <td style="border: 1px solid #dddddd; text-align: left; padding: 8px">
          <%= profitLossReport[i].product %>
        </td>
        <td style="border: 1px solid #dddddd; text-align: left; padding: 8px">
          <%= profitLossReport[i].total_quantity %>
        </td>
        <td style="border: 1px solid #dddddd; text-align: left; padding: 8px">
          ₹ <%= profitLossReport[i].retailer_profit_loss %>
        </td>
        <td style="border: 1px solid #dddddd; text-align: left; padding: 8px">
          ₹ <%= profitLossReport[i].wholesaler_profit_loss %>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
</body>
